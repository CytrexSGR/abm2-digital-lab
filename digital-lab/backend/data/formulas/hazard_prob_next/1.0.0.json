{
  "version": "1.0.0",
  "inputs": [
    {
      "name": "base_hazard"
    },
    {
      "name": "total_investment"
    },
    {
      "name": "environmental_sensitivity"
    }
  ],
  "expression": "Max(0.0, Min(1.0, base_hazard + (total_investment * environmental_sensitivity)))",
  "allowed_symbols": [
    "Min",
    "Max",
    "+",
    "-",
    "*",
    "/"
  ],
  "tests": {
    "defaults": {},
    "golden": [
      {
        "name": "no_investment_baseline",
        "input": {
          "base_hazard": 0.01,
          "total_investment": 0.0,
          "environmental_sensitivity": 1e-6
        },
        "expected": 0.01,
        "tolerance": 1e-12
      },
      {
        "name": "high_investment_increases_risk",
        "input": {
          "base_hazard": 0.01,
          "total_investment": 10000.0,
          "environmental_sensitivity": 1e-6
        },
        "expected": 0.02,
        "tolerance": 1e-12
      },
      {
        "name": "clamped_to_maximum",
        "input": {
          "base_hazard": 0.5,
          "total_investment": 1000000.0,
          "environmental_sensitivity": 1e-6
        },
        "expected": 1.0,
        "tolerance": 1e-12
      },
      {
        "name": "clamped_to_minimum",
        "input": {
          "base_hazard": 0.0,
          "total_investment": -1000.0,
          "environmental_sensitivity": 1e-6
        },
        "expected": 0.0,
        "tolerance": 1e-12
      }
    ],
    "properties": [
      {
        "name": "monotonic_increasing_in_investment",
        "type": "monotonic",
        "direction": "increasing",
        "cases": [
          {
            "input": {
              "base_hazard": 0.01,
              "total_investment": 5000.0,
              "environmental_sensitivity": 1e-6
            }
          },
          {
            "input": {
              "base_hazard": 0.01,
              "total_investment": 15000.0,
              "environmental_sensitivity": 1e-6
            }
          }
        ]
      }
    ]
  },
  "metadata": {
    "description": "Calculates next hazard probability based on base hazard rate plus environmental impact from total investment",
    "created_by": "migration_tool",
    "released_by": "migration_tool"
  },
  "status": "released"
}