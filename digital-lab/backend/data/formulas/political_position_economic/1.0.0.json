{
  "version": "1.0.0",
  "inputs": [
    {
      "name": "vermoegen"
    },
    {
      "name": "altruism_factor"
    }
  ],
  "expression": "Max(-1.0, Min(1.0, ((vermoegen / (vermoegen + 10000)) * 2 - 1) - (altruism_factor * 0.5)))",
  "allowed_symbols": [
    "Min",
    "Max",
    "+",
    "-",
    "*",
    "/"
  ],
  "tests": {
    "defaults": {},
    "golden": [
      {
        "name": "high_wealth_low_altruism_pro_market",
        "input": {
          "vermoegen": 50000.0,
          "altruism_factor": 0.2
        },
        "expected": 0.5666666666666667,
        "tolerance": 1e-12
      },
      {
        "name": "low_wealth_high_altruism_pro_redistribution",
        "input": {
          "vermoegen": 1000.0,
          "altruism_factor": 0.8
        },
        "expected": -1.0,
        "tolerance": 1e-12
      },
      {
        "name": "zero_wealth_neutral_altruism",
        "input": {
          "vermoegen": 0.0,
          "altruism_factor": 0.5
        },
        "expected": -1.0,
        "tolerance": 1e-12
      },
      {
        "name": "balanced_case",
        "input": {
          "vermoegen": 10000.0,
          "altruism_factor": 0.5
        },
        "expected": -0.25,
        "tolerance": 1e-12
      }
    ],
    "properties": [
      {
        "name": "monotonic_increasing_in_wealth",
        "type": "monotonic",
        "direction": "increasing",
        "cases": [
          {
            "input": {
              "vermoegen": 5000.0,
              "altruism_factor": 0.5
            }
          },
          {
            "input": {
              "vermoegen": 15000.0,
              "altruism_factor": 0.5
            }
          }
        ]
      },
      {
        "name": "monotonic_decreasing_in_altruism",
        "type": "monotonic",
        "direction": "decreasing",
        "cases": [
          {
            "input": {
              "vermoegen": 10000.0,
              "altruism_factor": 0.3
            }
          },
          {
            "input": {
              "vermoegen": 10000.0,
              "altruism_factor": 0.7
            }
          }
        ]
      }
    ]
  },
