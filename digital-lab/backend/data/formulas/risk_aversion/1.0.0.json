{
  "version": "1.0.0",
  "inputs": [
    {
      "name": "vermoegen"
    },
    {
      "name": "wealth_sensitivity_factor"
    }
  ],
  "expression": "1 / (1 + (vermoegen / Max(wealth_sensitivity_factor, 1.0)))",
  "allowed_symbols": [
    "Min",
    "Max",
    "+",
    "-",
    "*",
    "/"
  ],
  "tests": {
    "defaults": {},
    "golden": [
      {
        "name": "high_wealth_low_aversion",
        "input": {
          "vermoegen": 50000.0,
          "wealth_sensitivity_factor": 10000.0
        },
        "expected": 0.16666666666666666,
        "tolerance": 1e-12
      },
      {
        "name": "low_wealth_high_aversion",
        "input": {
          "vermoegen": 1000.0,
          "wealth_sensitivity_factor": 10000.0
        },
        "expected": 0.9090909090909091,
        "tolerance": 1e-12
      },
      {
        "name": "zero_wealth_max_aversion",
        "input": {
          "vermoegen": 0.0,
          "wealth_sensitivity_factor": 10000.0
        },
        "expected": 1.0,
        "tolerance": 1e-12
      },
      {
        "name": "baseline_config_values",
        "input": {
          "vermoegen": 10000.0,
          "wealth_sensitivity_factor": 10000.0
        },
        "expected": 0.5,
        "tolerance": 1e-12
      }
    ],
    "properties": [
      {
        "name": "monotonic_decreasing_in_wealth",
        "type": "monotonic",
        "direction": "decreasing",
        "cases": [
          {
            "input": {
              "vermoegen": 5000.0,
              "wealth_sensitivity_factor": 10000.0
            }
          },
          {
            "input": {
              "vermoegen": 15000.0,
              "wealth_sensitivity_factor": 10000.0
            }
          }
        ]
      }
    ]
  },
  "metadata": {
    "description": "Risk aversion formula based on wealth. Lower wealth leads to higher risk aversion (prospect theory simplification)",
    "created_by": "migration_tool",
    "released_by": "migration_tool"
  },
  "status": "released"
}