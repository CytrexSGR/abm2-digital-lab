{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "altruism_update schema",
  "type": "object",
  "properties": {
    "prev_altruism": {"type": "number", "minimum": 0.0, "maximum": 1.0},
    "bildung": {"type": "number", "minimum": 0.0, "maximum": 1.0},
    "delta_u_ego": {"type": "number", "default": 0.0},
    "delta_u_sozial": {"type": "number", "default": 0.0},
    "env_health": {"type": "number", "minimum": 0.0},
    "biome_capacity": {"type": "number", "exclusiveMinimum": 0.0},
    "params": {
      "type": "object",
      "properties": {
        "altruism_target_crisis": {"type": "number", "minimum": 0.0, "maximum": 1.0, "default": 0.7},
        "crisis_weighting_beta": {"type": "number", "minimum": 0.0, "default": 0.5},
        "max_learning_rate_eta_max": {"type": "number", "minimum": 0.0, "default": 0.2},
        "education_dampening_k": {"type": "number", "minimum": 0.0, "default": 1.0}
      },
      "required": [
        "altruism_target_crisis",
        "crisis_weighting_beta",
        "max_learning_rate_eta_max",
        "education_dampening_k"
      ]
    }
  },
  "required": [
    "prev_altruism",
    "bildung",
    "delta_u_ego",
    "delta_u_sozial",
    "env_health",
    "biome_capacity",
    "params"
  ],
  "additionalProperties": false,
  "output": {
    "type": "number",
    "minimum": 0.0,
    "maximum": 1.0,
    "clipping": {"min": 0.0, "max": 1.0}
  },
  "whitelist_functions": ["+", "-", "*", "/", "Min", "Max"]
}
